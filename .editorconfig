root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{css,js,jsx,html,less,sccss}]
indent_size = 2

[composer.json]
indent_size = 4

[Makefile]
indent_style = tab

[*.php]
indent_size = 4
max_line_length = 120

[*.sh]
indent_size = 4
indent_style = tab

[*.xml]
indent_size = 4
indent_style = tab

[*.{yml,yaml}]
indent_size = 4

[*.{css,js,html}.twig]
indent_size = 2

[*.xml.twig]
indent_size = 4
indent_style = tab